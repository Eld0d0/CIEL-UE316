{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<h1>Category index</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {% for category in categories %}
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-body">
                <p class="card-text">{{ category.name }}</p>
                <p class="card-text">{{ category.description }}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="{{ path('app_category_show', {'id': category.id}) }}"
                            class="btn btn-sm btn-outline-secondary">En savoir plus</a>
                        
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}"
                            class="btn btn-sm btn-outline-secondary">Modifier</a>
                        
                    </div>
                    <small class="text-muted">id : {{ category.id }}</small>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <p>Aucune cat√©gorie</p>
    {% endfor %}
</div>

<a href="{{ path('app_category_new') }}" class="btn btn-sm btn-outline-secondary">Ajouter</a>

{% endblock %}