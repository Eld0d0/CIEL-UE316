{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<h1>Produits</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {% for product in products %}
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-body">
                <p class="card-text">{{ product.title }}</p>
                <p class="card-text">{{ product.price }}€</p>
                <p class="card-text">{{ product.description }}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="{{ path('app_product_show', {'slug': product.slug}) }}"
                            class="btn btn-sm btn-outline-secondary">En savoir plus</a>
                        
                        <a href="{{ path('app_product_edit', {'slug': product.slug}) }}"
                            class="btn btn-sm btn-outline-secondary">Modifier</a>
                        
                    </div>
                    <small class="text-muted">id : {{ product.id }}</small>
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <p>Aucune catégorie</p>
    {% endfor %}
</div>

<a href="{{ path('app_product_new') }}" class="btn btn-sm btn-outline-secondary">Ajouter</a>

{% endblock %}